#!/usr/bin/env bash

## GENERAL
# Get named var (usage: get "VAR_NAME")
function get()
{
    echo "${!1}"
}

# Create a new directory and enter it
function mk()
{
    mkdir -p "$@" && cd "$@"
}

# Calculator
function calc()
{
    echo "$*" | bc -l;
}

# Open man page as PDF
function manpdf()
{
    man -t "$1" | open -f -a /Applications/Preview.app/
}

## OPENING FILES AND FOLDERS

# `o` with no arguments opens the current directory, otherwise opens the given
# location
function o()
{
    if [ $# -eq 0 ]; then
        open .;
    else
        open "$@";
    fi;
}

# `c` with no arguments opens the current directory in Visual Studio Code, otherwise opens
# the given location
function c()
{
    if [ $# -eq 0 ]; then
        code .;
    else
        code "$@";
    fi;
}

## HELP FOR ALIASES AND FUNCTIONS

# Show all custom defined aliasses.
function showalias()
{
    echo "\n## CUSTOM ALIASES:\n"
    cat ${DOTFILES}/system/.alias | grep alias*
    if is-macos; then
        echo "\n## CUSTOM MACOS ALIASES:\n"
        cat ${DOTFILES}/system/.alias_macos | grep '^##\|^alias'
    fi
}

# Show all custom defined functions.
function showfunc()
{
    echo "\n## CUSTOM FUNCTIONS:\n"
    cat ${DOTFILES}/system/.functions | grep '^##\|^# \|^function'
}

# Show all custom defined aliases and functions.
function showall()
{
    echo "\n## ALL CUSTOM DEFINED ALIASSES AND FUNCTIONS:\n"
    showalias
    showfunc
}